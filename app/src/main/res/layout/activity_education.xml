<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Education">
    <TextView
        android:id="@+id/txt_college"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="College"
        android:layout_marginTop="40dp"
        android:textSize="30sp"
        android:textColor="#000" />
    <TextView
        android:id="@+id/txt_college_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="DIT University"
        android:layout_marginTop="5dp"
        android:textSize="25sp"
        android:textColor="#000" />
    <TextView
        android:id="@+id/txt_degree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="BCA -Current Sgpa(7.76)"
        android:layout_marginTop="5dp"
        android:textSize="22sp"
        android:textColor="#000" />
    <TextView
        android:id="@+id/txt_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="2021-present"
        android:layout_marginTop="5dp"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/txt_School"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="School"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:textColor="#000" />
    <TextView
        android:id="@+id/txt_school_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Dr.Virendra Swarup Public School"
        android:layout_marginTop="5dp"
        android:textSize="25sp"
        android:textColor="#000" />
    <TextView
        android:id="@+id/txt_class_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="XII(ISC)"
        android:layout_marginTop="5dp"
        android:textSize="22sp"
        android:textColor="#000" />
    <TextView
        android:id="@+id/txt_percent_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="87.6%"
        android:layout_marginTop="5dp"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/txt_class_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="X(ICSC)"
        android:layout_marginTop="5dp"
        android:textSize="22sp"
        android:textColor="#000" />
    <TextView
        android:id="@+id/txt_percent_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="82.4%"
        android:layout_marginTop="5dp"
        android:textSize="15sp" />
</LinearLayout>