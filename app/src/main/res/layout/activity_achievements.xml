<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Achievements">
    <TextView
        android:id="@+id/txt_java_goldbatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Java Gold BATCH(Hackerank)"
        android:layout_marginTop="5dp"
        android:textSize="25sp"
        android:textColor="#FFEB3B" />
    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Funfact:- Completed in just 8 hours"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:textColor="#F60505" />
    <TextView
        android:id="@+id/txt_many_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Many more to come...."
        android:layout_marginTop="10dp"
        android:textSize="22sp"
        android:textColor="#8C8181" />
</LinearLayout>